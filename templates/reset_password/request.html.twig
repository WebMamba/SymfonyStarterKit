{% extends 'security_layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block card_title %}Reset your password{% endblock %}

{% block content %}
        <p class="mb-6 text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">
            Enter your email address, and we will send you a
            link to reset your password.
        </p>
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}
        {{ form_start(requestForm, {attr: {class: 'mt-4 space-y-4 lg:mt-5 md:space-y-5'}}) }}
            {{ form_label(requestForm.email, null, {label_attr: {class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
            {{ form_widget(requestForm.email, {attr: {class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
            {{ form_errors(requestForm.email, {attr: {class: 'mt-2 text-sm text-red-600 dark:text-red-500'}}) }}
            <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Reset passwod</button>
        {{ form_end(requestForm) }}
{% endblock %}
