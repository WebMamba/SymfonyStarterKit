{% extends 'base.html.twig' %}

{% block body %}
    <section class="bg-gray-50 dark:bg-gray-900">
        <div class="px-6 py-8 mx-auto md:h-screen lg:py-0 flex flex-col items-center justify-center">
            <a href="{{ path('app_home_index') }}" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="w-8 h-8 mr-2" src="https://symfony.com/logos/symfony_white_03.png" alt="logo">
                Symfony StarterKit
            </a>
            <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        {% block card_title %}{% endblock %}
                    </h1>
                    {% block content %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}